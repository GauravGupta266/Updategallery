<div class="container">
  <div class="row">
    <% @album.images.each do |image|%>
      <div class="col">
        <div class="card-body">
          <%= link_to image,target:"_blank" do%>
            <%= image_tag(image)%>
              <div>
                    <%= link_to "Destroy", purge_image_path(attachment_id: image.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  },class:"btn btn-danger ms-1 mt-2"%></li>
                </div>
          <%  end %>
        </div>
      </div>
    <%  end %>
  </div>
</div>




